// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Karyawan {
  id           Int       @id @default(autoincrement())
  telegram_id  BigInt    @unique
  nama_lengkap String
  jabatan      String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  absensi      Absensi[]
}

model Absensi {
  id         Int      @id @default(autoincrement())
  tipe       String // "MASUK" atau "KELUAR"
  latitude   Float
  longitude  Float
  createdAt  DateTime @default(now())
  karyawan   Karyawan @relation(fields: [karyawanId], references: [id])
  karyawanId Int
}

// DITAMBAHKAN: Model baru untuk menyimpan pengaturan aplikasi
model Pengaturan {
  id        Int     @id @default(autoincrement())
  nama      String  @unique // contoh: "jam_lembur_minggu"
  nilai     String  // contoh: "4"
  deskripsi String?
}
